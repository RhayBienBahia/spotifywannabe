<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Music Player</title>
</head>
<body>
  <header>
    <h1>Music Player</h1>
  </header>

  <section class="song-form-container">
    <form action="/add" method="POST" enctype="multipart/form-data" class="song-form">
      <input type="text" name="title" placeholder="Song Title" class="input-text" required>
      <input type="text" name="artist" placeholder="Artist" class="input-text" required>
      <input type="file" name="musicFile" accept="audio/*" class="input-file" required>
      <button type="submit" class="btn-submit">Add Song</button>
    </form>
  </section>

  <section class="song-list-container">
    <h2>Made for You</h2>
    <div class="song-list">
      <% songs.forEach(song => { %>
        <div class="song-card">
          <div class="song-details">
            <strong class="song-title"><%= song.title %></strong>
            <p class="song-artist">by <%= song.artist %></p>
          </div>
          <div class="music-controls">
            <audio controls>
              <source src="<%= song.filepath %>" type="audio/mp3">
            </audio>
          </div>
          <form action="/delete/<%= song.id %>" method="POST" class="delete-form">
            <button type="submit" class="btn-delete">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  </section>

</body>
</html>
